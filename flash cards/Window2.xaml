<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="flash_cards.Window2" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="flash_cards"
	Height="300"
	Width="300">
	<Grid
		RenderTransformOrigin="0.5,0.5">
		<TextBlock
			TextAlignment="Center"
			RenderTransformOrigin="1.4592,4.625"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Margin="0,0,0,0"
			FontSize="18"
			x:Name="display"></TextBlock>
		<Button
			Width="75"
			Height="23"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="107.5,154,0,0"
			Content="Next"
			x:Name="button1"
			Click="button1_Click" />
		<Button
			Width="75"
			Height="23"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="108,200,0,0"
			x:Name="Menu"
			Click="Menu_Click"
			Content="Menu" />
	</Grid>
</Window>